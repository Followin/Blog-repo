@model Blog.WEB.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
}

@section body
{
    <div class="paper-block">
    <h2>Login</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        @Html.ValidationSummary(false)

        <div></div>

        <div class="form-group">
            @Html.LabelFor(model => model.Login)
            @Html.EditorFor(model => model.Login)
            @Html.ValidationMessageFor(model => model.Login)
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Password)
            @Html.EditorFor(model => model.Password)
            @Html.ValidationMessageFor(model => model.Password)
        </div>

        <div class="form-group">
            @Html.EditorFor(model => model.Persistent)
            @Html.LabelFor(model => model.Persistent)
            @Html.ValidationMessageFor(model => model.Persistent)
        </div>

        <p>
            <input type="submit" value="Login" />
        </p>

    }

    <div>
        @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "cancel-button" })
    </div>
</div>
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
